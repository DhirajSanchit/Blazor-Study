@model List<AssortmentViewModel>

@{
    Layout = "_AdminLayout";
}

<title>Assortment</title>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="justify-content-center text-center">
                <h1>Assortment</h1>
            </div>
        </div>
    </div>
    <div class="row">
        
        @if (Model.Any())
        {
            foreach (var product in Model)
            {
                <partial name="_AssortmentCard" model="product"/>

            }
        }
        else
        {
            <div class="col-md-12">
                <div class="justify-content-center text-center">
                    <h3>No products available</h3>
                </div>
            </div>
        }
    </div> 
</div>

