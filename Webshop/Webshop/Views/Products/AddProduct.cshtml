@model ProductViewModel

@{
    Layout = "_AdminLayout";
}
 
<h1>Create</h1>

<h4>Product</h4>
<hr/>

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" min="1" step="any" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageLink" class="control-label"></label>
                <input asp-for="ImageLink" class="form-control"/>
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Add Product" class="btn btn-primary"/>
            </div>
        </form>
        
    </div>
</div>


<div class="mt-5">
    <a asp-action="Assortment">Back to Assortment</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}