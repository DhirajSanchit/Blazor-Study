@model ShoppingCartViewModel

@{
    Layout = "_Layout";
}

<h3 class="my-5">
    Shopping cart
</h3>


<div class="row gx-3">
    <div class="col-8">
        <div></div>
        @if (Model != null)
        {
            foreach (var line in Model.ShoppingCart.ShoppingCartItems)
            {
                <div class="card shopping-cart-card mb-2">
                    <div class="row">
                        <div class="col-md-4">
                            @* <img src="@line.Product.ImageLink" class="" alt="@line.Product.Name"> *@
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <a class="text-capitalize text-decoration-none" asp-controller="Products" asp-action="ProductDetails" asp-route-id="@line.Product.ProductId"><h5 class="card-text">@line.Amount x @line.Product.Name</h5></a>
                                <div class="d-flex justify-content-between">
                                    <h6 class="text-truncate">@line.Product.Description</h6>
                                    <h2>@line.Product.Price.ToString("c")</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            if (!Model.ShoppingCart.ShoppingCartItems.Any())
            {
                <div class="card shopping-cart-card mb-2">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-body">
                                <h5 class="card-text">Your shopping cart is empty</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
        
   


    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 class="col">Total:</h4>
                <h4 class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr/>
            <div class="text-center d-grid">

            </div>
        </div>
    </div>
</div>


