<div class="container-fluid">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Product?.ImageLink" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a href="/Products/ProductDetails/@Product?.ProductId">@Product?.Name</a>
                    <p class="card-text">@Product?.Description</p>
                    <p class="card-text">
                        <small class="text-muted">@Product?.Price.ToString("C")</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>