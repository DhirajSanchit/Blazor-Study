@page "/products"

<PageTitle>Weather forecast</PageTitle>

@using BlazorServer.ViewModels 
@using LogicLayer.Interfaces 
@using Microsoft.CodeAnalysis.CSharp.Syntax
@inject ITestDapperContainer _container

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@{

    TestViewModel tvm = new();
    tvm.DataSet = _container.GetAll();
}


@if (tvm == null)
{
    <p>
        <em>Empty</em>
    </p>
}
else
{

    
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var record in tvm.DataSet)
        {
            <tr>
                <td>@record.Id</td>
                <td>@record.Value</td> 
            </tr>
        }
        </tbody>
    </table>
}

