
@if(this.Product!=null)
{
    <tr>
        <NavLink class="nav-link" href="@($"product/{@Product.ProductId}")">       
            <td>@Product.Name</td>
        </NavLink>
        <td>@Product.Brand</td>
        <td>@Product.Price.ToString("c")</td>
    </tr>
}

@code{
    
    [Parameter]
    public Product Product{get;set;}
}
